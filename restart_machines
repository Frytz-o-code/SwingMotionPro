#!/bin/bash

APP_NAME="swingmotionpro"

echo "üì¶ Hole Machine-IDs f√ºr App '$APP_NAME'..."
MACHINE_IDS=$(flyctl machines list -a "$APP_NAME" --json | jq -r '.[].id')

if [ -z "$MACHINE_IDS" ]; then
    echo "‚ö†Ô∏è  Keine Machines gefunden f√ºr App '$APP_NAME'"
    exit 1
fi

for ID in $MACHINE_IDS; do
    echo "üîÅ Starte Machine $ID neu..."
    flyctl machines restart "$ID" -a "$APP_NAME"
done

echo "‚úÖ Alle Maschinen wurden neu gestartet."